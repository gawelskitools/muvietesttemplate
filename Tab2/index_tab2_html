<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tab 2 - Layer 2 Einstellungen</title>
    <style>
        .controls {
            margin-top: 10px;
        }

        label, select, textarea, button {
            display: block;
            margin: 10px 0;
        }

        #toggleButton {
            padding: 10px;
            border: none;
            color: white;
            background-color: red;
            cursor: pointer;
        }

        #toggleButton.active {
            background-color: green;
        }

        textarea {
            width: 600px;
            font-family: 'Sans-Serif';
        }
    </style>
    <script>
        let layer2Enabled = false;
        let currentColor = 'transparent';
        let currentText = ['', ''];

        function updateToggleButton() {
            const button = document.getElementById('toggleButton');
            if (layer2Enabled) {
                button.classList.add('active');
                button.innerText = 'Layer 2: AN';
            } else {
                button.classList.remove('active');
                button.innerText = 'Layer 2: AUS';
            }
        }

        function toggleLayer2() {
            layer2Enabled = !layer2Enabled;
            const layer2 = window.parent.document.getElementById('layer2');
            if (layer2Enabled) {
                layer2.style.display = 'block';
                layer2.style.backgroundColor = currentColor;
                updateLayer2Text(currentText[0], currentText[1]);
            } else {
                layer2.style.display = 'none';
            }
            updateToggleButton();
        }

        function changeColor(color) {
            currentColor = color;
            if (layer2Enabled) {
                const layer2 = window.parent.document.getElementById('layer2');
                layer2.style.backgroundColor = currentColor;
            }
        }

        function updateText() {
            const text = document.getElementById('textInput').value.split('\n');
            currentText[0] = text[0] || '';
            currentText[1] = text[1] || '';
            if (layer2Enabled) {
                updateLayer2Text(currentText[0], currentText[1]);
            }
        }

        function updateLayer2Text(line1, line2) {
            const layer2Line1 = window.parent.document.getElementById('layer2Line1');
            const layer2Line2 = window.parent.document.getElementById('layer2Line2');
            layer2Line1.textContent = line1;
            layer2Line2.textContent = line2;
        }

        window.onload = function() {
            updateToggleButton();
        };
    </script>
</head>
<body>

    <div class="controls">
        <!-- AN/AUS-Button -->
        <label for="toggleButton">Layer 2 AN/AUS
